<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Sample"
        parent="TextAppearance.AppCompat" />

    <style name="TextAppearance.Sample.Body">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.Sample.Body.Primary">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="TextAppearance.Sample.Body.Accent">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="TextAppearance.Sample.Headline">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?android:attr/textColorTertiary</item>
    </style>

    <style name="TextAppearance.Sample.Headline.Primary">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="TextAppearance.Sample.Headline.Accent">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="Widget.Sample.SampleView" parent="">
        <item name="android:minWidth">@dimen/sampleViewMinWidth</item>
        <item name="android:minHeight">@dimen/sampleViewMinHeight</item>
        <item name="sampleBorderWidth">@dimen/sampleViewBorderWidth</item>
        <item name="borderColor">@color/sampleViewBorderColor</item>
        <item name="innerColor">@color/sampleViewInnerColor</item>
    </style>

    <style name="Widget.Sample.SampleView.InTheme">
        <item name="innerColor">?attr/colorAccent</item>
    </style>

    <style name="Widget.Sample.SampleView.Extended">
        <item name="innerColor">?attr/colorPrimary</item>
    </style>

    <style name="Widget.Sample.Button.Colored.Primary"
        parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/colored_button_primary</item>
    </style>

    <style name="Widget.Sample.Button.Colored.Accent"
        parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/colored_button_accent</item>
    </style>

    <style name="Widget.Sample.Button.Borderless.Colored.Primary"
        parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textAppearance">@style/TextAppearance.Sample.Widget.Button.Borderless.Colored.Primary</item>
    </style>

    <style name="TextAppearance.Sample.Widget.Button.Borderless.Colored.Primary"
        parent="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored">
        <item name="android:textColor">@color/borderless_button_primary</item>
    </style>

    <style name="Widget.Sample.Button.Borderless.Colored.Accent"
        parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textAppearance">@style/TextAppearance.Sample.Widget.Button.Borderless.Colored.Accent</item>
    </style>

    <style name="TextAppearance.Sample.Widget.Button.Borderless.Colored.Accent"
        parent="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored">
        <item name="android:textColor">@color/borderless_button_accent</item>
    </style>

</resources>